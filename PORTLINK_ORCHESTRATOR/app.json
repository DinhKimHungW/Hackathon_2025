{
  "name": "PortLink Orchestrator",
  "description": "Smart Port Management System with AI-powered optimization",
  "keywords": ["nestjs", "react", "postgresql", "redis", "port-management"],
  "website": "https://github.com/DinhKimHungW/Hackathon_2025",
  "repository": "https://github.com/DinhKimHungW/Hackathon_2025",
  "logo": "https://node-js-sample.herokuapp.com/node.svg",
  "success_url": "/",
  "env": {
    "NODE_ENV": {
      "description": "Node environment",
      "value": "production",
      "required": true
    },
    "DATABASE_URL": {
      "description": "PostgreSQL database URL (auto-provided by Heroku PostgreSQL addon)",
      "required": false
    },
    "REDIS_URL": {
      "description": "Redis URL (auto-provided by Heroku Redis addon)",
      "required": false
    },
    "JWT_SECRET": {
      "description": "Secret key for JWT tokens",
      "generator": "secret",
      "required": true
    },
    "JWT_EXPIRATION": {
      "description": "JWT token expiration time",
      "value": "1d",
      "required": false
    },
    "JWT_REFRESH_EXPIRATION": {
      "description": "JWT refresh token expiration time",
      "value": "7d",
      "required": false
    },
    "CORS_ORIGIN": {
      "description": "Frontend URL for CORS (e.g., https://your-frontend.vercel.app)",
      "required": true
    },
    "API_PREFIX": {
      "description": "API route prefix",
      "value": "api/v1",
      "required": false
    },
    "SWAGGER_PATH": {
      "description": "Swagger documentation path",
      "value": "api/docs",
      "required": false
    }
  },
  "formation": {
    "web": {
      "quantity": 1,
      "size": "eco"
    }
  },
  "addons": [
    {
      "plan": "heroku-postgresql:essential-0",
      "as": "DATABASE"
    },
    {
      "plan": "heroku-redis:mini",
      "as": "REDIS"
    }
  ],
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    }
  ],
  "stack": "heroku-22",
  "scripts": {
    "postdeploy": "cd backend && npm run migration:run"
  }
}
