# Production Environment Configuration
# Copy this file to .env.production and fill in the values
# DO NOT commit .env.production to version control

# Node Environment
NODE_ENV=production

# Server Configuration
PORT=3000

# Database Configuration (Render PostgreSQL)
DATABASE_HOST=your-render-postgres-host.render.com
DATABASE_PORT=5432
DATABASE_USER=your_database_user
DATABASE_PASSWORD=your_secure_password_here
DATABASE_NAME=portlink_orchestrator

# Redis Configuration (Render Redis)
REDIS_HOST=your-render-redis-host.render.com
REDIS_PORT=6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-min-32-characters-long
JWT_EXPIRATION=1d
JWT_REFRESH_EXPIRATION=7d

# CORS Configuration
CORS_ORIGIN=https://portlink-frontend.onrender.com

# Application Settings
API_PREFIX=api/v1
SWAGGER_PATH=api/docs

# Logging
LOG_LEVEL=info
