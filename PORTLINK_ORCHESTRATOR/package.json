{
  "name": "portlink-orchestrator",
  "version": "1.0.0",
  "description": "PortLink Orchestrator - Digital Twin Platform",
  "private": true,
  "engines": {
    "node": ">=18.x",
    "npm": ">=9.x"
  },
  "scripts": {
    "dev:backend": "cd backend && npm run start:dev",
    "dev:frontend": "cd frontend && npm run dev",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "build:all": "npm run build:backend && npm run build:frontend",
    "start:backend": "cd backend && npm run start:prod",
    "start:frontend": "cd frontend && npm run preview",
    "start": "cd backend && npm run start:prod",
    "deploy:check": "node scripts/deploy-check.js",
    "heroku-postbuild": "cd backend && npm install && npm run build",
    "postinstall": "echo 'âœ… Root dependencies installed. Run npm install in backend/ and frontend/ directories.'"
  },
  "keywords": [
    "portlink",
    "digital-twin",
    "port-management",
    "orchestrator"
  ],
  "author": "PortLink Team",
  "license": "MIT"
}
